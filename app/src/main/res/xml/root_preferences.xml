<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/server_header">

        <EditTextPreference
            app:key="host"
            app:title="@string/host_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/app_header">
        <SwitchPreferenceCompat
            app:key="timer"
            app:title="@string/timer_title"
            app:defaultValue="true"
            />
        <SwitchPreferenceCompat
            app:key="muted"
            app:title="@string/muted_title"
            app:defaultValue="true"
            />
    </PreferenceCategory>

</PreferenceScreen>